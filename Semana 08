import os

# Definimos colores para la consola
class Colores:
    HEADER = '\033[95m'
    OKBLUE = '\033[94m'
    OKGREEN = '\033[92m'
    WARNING = '\033[93m'
    FAIL = '\033[91m'
    ENDC = '\033[0m'  # Para resetear color
    BOLD = '\033[1m'

def mostrar_codigo(ruta_script):
    ruta_script_absoluta = os.path.abspath(ruta_script)
    try:
        with open(ruta_script_absoluta, 'r', encoding='utf-8') as archivo:
            print(f"\n{Colores.BOLD}{Colores.OKBLUE}--- Código de {ruta_script} ---{Colores.ENDC}\n")
            contenido = archivo.read()
            print(contenido)
    except FileNotFoundError:
        print(f"{Colores.FAIL}El archivo no se encontró.{Colores.ENDC}")
    except Exception as e:
        print(f"{Colores.FAIL}Ocurrió un error al leer el archivo: {e}{Colores.ENDC}")

def mostrar_menu():
    ruta_base = os.path.dirname(__file__)

    opciones = {
        '1': 'UNIDAD 1/1.2. Tecnicas de Programacion/1.2.1. Ejemplo Tecnicas de Programacion.py'
    }

    while True:
        print(f"\n{Colores.BOLD}{Colores.HEADER}Menu Principal - Dashboard{Colores.ENDC}")
        for key in opciones:
            print(f"{Colores.OKGREEN}{key}{Colores.ENDC} - {opciones[key]}")
        print(f"{Colores.WARNING}0{Colores.ENDC} - Salir")

        eleccion = input("Elige un script para ver su código o '0' para salir: ")
        
        if eleccion == '0':
            print(f"{Colores.OKBLUE}Saliendo...{Colores.ENDC}")
            break
        elif eleccion in opciones:
            ruta_script = os.path.join(ruta_base, opciones[eleccion])
            mostrar_codigo(ruta_script)
        else:
            print(f"{Colores.FAIL}Opción no válida. Por favor, intenta de nuevo.{Colores.ENDC}")

if __name__ == "__main__":
    mostrar_menu()
